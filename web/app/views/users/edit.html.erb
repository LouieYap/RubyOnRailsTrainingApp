<%= form_with(model: @user, local: true) do |form| %>

  <div class="form-group row">
    <div class="col-md-4">
      <%= form.label :username %>
      <%= form.text_field :username, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-4">
      <%= form.label :password %>
      <%= form.password_field :password, placeholder: '******', class: 'form-control' %>


    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-4">
      <%= form.label :admin %>
      <%= form.check_box :admin %>
    </div>
  </div>


  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
